<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interview Bot-Register</title>
    <link rel="stylesheet" href="css/registration.css">
    <link rel="icon" href="images/8.png">
    <link rel="stylesheet " href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css ">

</head>

<body>
    <div class="navbar" id="Home">
        <div class="logo">
            <h1>LOGO</h1>
        </div>
        <div class="navigation">
            <a href="/register"><i class="fa fa-user-plus"></i>Register</a>
            <a href="/login"><i class="fa fa-sign-in"></i>Login</a>
            <a href="/"><i class="fa fa-home"></i>Home</a>   
        </div>    
    </div>
    <section>
        <div class="image">
            <img src="images/1.jpg" alt="">
        </div>
        <div class="content">
            <div class="form_sign_up">
                <h2>Register</h2>
                <form action="/register" method="post">

                    <div class="progress_bar">
                        <div class="progress_line" id="progress_line"></div>
                        <div class="progress progress_active" data-title="Personal"></div>
                        <div class="progress" data-title="Contact"></div>
                        <div class="progress" data-title="Education"></div>
                        <div class="progress" data-title="Projects"></div>
                    </div>
                    <div class="input_group input_group_active">
                        <div class="input">
                            <label for="FirstName_id">First Name<span>*</span></label>
                            <input type="text" name="FirstName" id="FirstName_id"required>
                        </div>

                        <div class="input">
                            <label for="LastName_id">Last Name<span>*</span></label>
                            <input type="text"name="LastName" id="LastName_id" required>
                        </div>

                        <div class="input">
                            <label for="date_id">Date of Birth<span>*</span></label>
                            <input type="date" name="date" id="date_id">
                        </div>

                        <div class="input">
                            <label for="Nationality_id">Nationality<span>*</span></label>
                            <input type="text" name="Nationality" id="Nationality_id"required>
                        </div>

                        <div class="input_gender">
                          <label for="male">Gender*</label>
                            <input type="radio" name="gender" id="male" value="male">
                            <label for="male">Male</label>
                            <input type="radio" name="gender" id="female" value="female">
                            <label for="female">Female</label>
                        </div>

                        <div class="input">
                            <a href="#" class="Next">Next</a>

                        </div>
                        <div class="input">
                            <center>
                                <span>Dont have an account?
                                    <a href="/login" class="sign_in">Sign in</a>
                                </span>
                            </center>
                        </div>
                    </div>
                    <div class="input_group">
                        <div class="input">
                           <label for="FatherName_id">Father Name<span>*</span></label>
                            <input type="text" name="FatherName" id="FatherName_id"required>
                        </div>
                        <div class="input">
                            <label for="PhoneNumber_id">Phone Number<span>*</span></label>
                            <input type="tel" name="PhoneNumber" id="PhoneNumber_id"required>
                        </div>
                        <div class="input">
                            <label for="Address_id">Address<span>*</span></label>
                            <textarea id="Address_id" cols="30" rows="3" name="Address" required></textarea>
                        </div>
                        <div class="input">
                            <label for="Pincode_id">Pincode<span>*</span></label>
                            <input type="tel" name="Pincode" id="Pincode_id"required>
                        </div>
                        <div class="input">
                            <label for="Country_id">Country<span>*</span></label>
                            <input type="text" name="Country" id="Country_id"required>
                        </div>
                        <div class="input_button">
                            <a href="#" class="Previous">Previous</a>
                            <a href="#" class="Next">Next</a>
                        </div>
                    </div>
                    <div class="input_group">
                        <div class="input">
                            <label for="UniversityName_id">University Name<span>*</span></label>
                            <input type="text" required id="UniversityName_id"placeholder="Enter University name" name="UniversityName">
                        </div>
                        
                        <div class="input">
                            <label for="CollegeName_id">College Name<span>*</span></label>
                            <input type="text" required id="CollegeName_id"placeholder="Enter intermediate college name" name="CollegeName">
                        </div>
                        <div class="input">
                            <label for="CGPA_id">CGPA<span>*</span></label>
                            <input type="tel" required id="CGPA_id"placeholder="Enter intermediate CGPA or percentage" name="IntermediateCGPA">
                        </div>
                        <div class="input">
                            <label for="SchoolName_id">School Name<span>*</span></label>
                            <input type="text" required id="SchoolName_id"placeholder="Enter 10th class school name" name="SchoolName">
                        </div>

                        <div class="input">
                            <label for="TenthCGPA_id">CGPA<span>*</span></label>
                            <input type="tel" required id ="TenthCGPA_id" placeholder="Enter 10th CGPA or percentage"name="TenthCGPA">
                        </div>
                        <div class="input_button">
                            <a href="#" class="Previous">Previous</a>
                            <a href="#" class="Next">Next</a>

                        </div>
                    </div>
                    <div class="input_group">
                        <div class="input">
                            <label for="UniversityCGPA_id">Present CGPA<span>*</span></label>
                            <input type="tel" required id="UniversityCGPA_id"placeholder="Enter CGPA or percentage" name="UniversityCGPA">
                        </div>
                        <div class="input">
                            <label for="Resume_id">Upload Resume<span>*</span></label>
                            <input type="file" id="Resume_id">
                        </div>
                        <div class="input">
                            <label for="Gmail_id">Gmail<span>*</span></label>
                            <input type="email" name="Gmail" id="Gmail_id"placeholder="Enter your Gmail" required>
                        </div>
                        <div class="input">
                            <label for="Password_id">Password<span>*</span></label>
                            <input type="password" name="password" id="Password_id" required>
                        </div>
                        <div class="input">
                            <label for="confirmpassword_id">Confirm Password<span>*</span></label>
                            <input type="password" name="confirmpassword" id="confirmpassword_id" required>
                        </div>
                        <div class="input_button">
                            <a href="#" class="Previous">Previous</a>
                            <input type="submit" id="Submit" value="Sign up">
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </section>
    <script>
        const prev = document.querySelectorAll(".Previous");
        const next = document.querySelectorAll(".Next");
        const progress = document.getElementById("progress_line");
        const Steps = document.querySelectorAll(".input_group");
        const progress_bar = document.querySelectorAll(".progress");

        let StepsNum = 0;
        next.forEach((btn) => {
            btn.addEventListener("click", () => {
                StepsNum++;
                updateSteps();
                update_progress_bar()
                console.log(StepsNum);
            });
        });
        prev.forEach((btn) => {
            btn.addEventListener("click", () => {
                StepsNum--;
                updateSteps();
                update_progress_bar();
                console.log(StepsNum);
            });
        });

        function updateSteps() {
            Steps.forEach(Step => {
                Step.classList.contains("input_group_active") &&
                    Step.classList.remove("input_group_active");

            })
            Steps[StepsNum].classList.add("input_group_active");
            console.log(StepsNum);
        }

        function update_progress_bar() {
            progress_bar.forEach((progressStep, idx) => {
                if (idx < StepsNum + 1) {
                    progressStep.classList.add("progress_active");
                } else {
                    progressStep.classList.remove("progress_active");
                }
            });
            const progress_bar_line = document.querySelectorAll(".progress_active");



            progress.style.width = ((progress_bar_line.length - 1) / (progress_bar.length - 1)) * 100 + "%";

        }
    </script>
</body>

</html>
